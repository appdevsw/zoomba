{
  "manifest_version": 3,
  "author": "appdevsw@gmail.pl",
  "background": {
    "service_worker": "service_worker.js"
  },  
  "content_scripts": [
    {
      "all_frames": false,
      "js": [
        "common.js",
        "keyboard.js",
        "settings.js",
        "popup.js",
        "content.js"
      ],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "description": "Customizable zoom increment.",
  "icons": {
    "128": "loupe128.png"
  },
  "name": "Zoomba",
  "options_page": "popup.html",
  "permissions": [
    "storage",
    "tabs",
    "management",
    "scripting",
    "activeTab"
  ],
  "short_name": "Zoomba",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.3.1",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Zoomba"
  },
  "host_permissions": ["<all_urls>"]
}